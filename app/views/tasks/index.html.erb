<div class="container">
  <h1>My Tasks</h1>
  
  <br>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= task.completed ? ("<input type='checkbox' name='nameOfChoice' value='1' checked onclick='return false;'>").html_safe : ("<input type='checkbox' name='nameOfChoice' value='1'  onclick='return false;'>").html_safe %>
        <%= link_to task.title, task_path(task) %> 
        <%= link_to @bin_icon,
        task_path(task),
        method: :delete,
        data: { confirm: "Are you sure you want to delete #{task.title}?" } %>
      </li>
    <% end %>
  </ul>
  <br>
  <p><i class='fas fa-plus'></i> <%= link_to "Add a new task", new_task_path %></p>
</div>